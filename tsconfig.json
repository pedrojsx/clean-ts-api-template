{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "removeComments": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@test/*": ["../test/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "src/main/config"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
